{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2018",
      "ESNext.AsyncIterable"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is correct in imports. */
    "strict": true,
    "skipLibCheck": true
  }
}