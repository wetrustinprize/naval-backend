{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@generated/*": [
        "src/generated/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "target": "es2016",
    "lib": [
      "ES2016",
      "ESNext.AsyncIterable"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true
  }
}